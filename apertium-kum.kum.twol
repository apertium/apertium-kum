!!!!!!!!! Vowel Harmony !!!!!!!!!!!

"{I} front unrounded harmony"
%{I%}:и <=> [ [ :FrontVow | [ [ :Vow - [ :RdVow | :RdYotVow ] ] :ь ] ] :Cns :Cns* ]/:0 _ ;
        except
                       %{n%}:н/[ :0 | %>: ] _ .#. ;
   [ :FrontVow :в :Cns*  ]/[ :0 - %{☭%}:0 ] _ ;  ! -евни in Russian words

"{I} front rounded harmony"
%{I%}:ю <=> [ [ :RdVow :ь ] :Cns :Cns* ]/:0 _ ;
            [ [ :RdYotVow ] :Cns :Cns* ]/:0 _ ;
                 [ :FrontVow :в :Cns*  ]/:0 _ ;
            !!!!! following for ойу → ою !!!!!
          [ :RdVow :Cns* й:0 ]/[ :0 - й:0 ] _ ;
			   !!!!! following for юйю → юю !!!!!
       [ :RdYotVow :Cns* й:0 ]/[ :0 - й:0 ] _ ;
        except
            %{n%}:н/[ :0 | %>: ] _ .#. ;
           :Vow [ :RdYotVow :Cns :Cns* ]/:0 _ ;
            .#. [ :RdYotVow :Cns :Cns* ]/:0 _ ;
             %{☭%}: :Cns*/[ :0 - %{☭%}:0 ]* _ ;
        [ :FrontVow :в %{☭%}: :Cns* ]/[ :0 - %{☭%}:0 ]* _ ;
       [ :RdYotVow :Cns* %{☭%}:0 :Cns* ]/[ :0 - %{☭%}:0 ] _ ;  ! -ёрну in Russian words

"{I} back rounded harmony"
%{I%}:у <=>        [ :RdVow :Cns :Cns* ]/:0 _ ;
           :Vow [ :RdYotVow :Cns :Cns* ]/:0 _ ;
            .#. [ :RdYotVow :Cns :Cns* ]/:0 _ ;
                  [ :BackVow :в :Cns*  ]/:0 _ ;
       :RdYotVow [ :Cns :Cns* %{☭%}:0 :Cns* ]/[ :0 - %{☭%}:0 ] _ ;  ! -ёрну in Russian words
       :RdYotVow [ :Cns* %{☭%}:0 :Cns :Cns* ]/[ :0 - %{☭%}:0 ] _ ;  ! -ёрну in Russian words
		 ! need the above two rules because there needs to be at least one consonant, but it doesn't matter which side of {☭} it is; could combine to one rule with | between the two contexts, but I don't think it's possible to simplify it, e.g. "either :Cns before {☭} or :Cns after {☭}, with optional :Cns* either side"
        except
                       %{n%}:н/[ :0 | %>: ] _ .#. ;
            [ [ :RdVow :ь ] :Cns :Cns* ]/:0 _ ;
       :а :в %{☭%}: :Cns*/[ :0 - %{☭%}:0 ]* _ ;  !  -авны, -овну
          [ :RdVow :Cns* й:0 ]/[ :0 - й:0 ] _ ;  ! ойу > ою

"{A} front unrounded harmony"
%{A%}:е <=> [ [ :FrontVow | [ :Vow :ь ] ] :Cns :Cns* ]/:0 _ ;
                          [ [ :RdVow :ь ] :Cns :Cns* ]/:0 _ ;
      [ [ [ \[ .#. | :Vow ] ] :RdYotVow ] :Cns :Cns* ]/:0 _ ;
        except
       [ :RdYotVow :Cns* %{☭%}:0 :Cns* ]/[ :0 - %{☭%}:0 ] _ ;  ! -ёрлар in Russian words


